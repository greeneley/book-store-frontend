{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"allowJs": false, // false -> tất cả file .js đều không được compiler, chỉ typescript được compile;
		"jsx": "react",
		"module": "commonjs",
		"noImplicitAny": true, // Khi được đặt là true, TypeScript sẽ báo lỗi nếu không thể suy ra kiểu của một biến và mặc định là any.
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true, // Khi được đặt là true, tạo ra các tệp bản đồ nguồn để hỗ trợ gỡ lỗi.
		"target": "es5",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"ignoreDeprecations": "5.0",
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"lib": ["es2015", "dom"],
		"paths": {
			"@/*": ["src/*"],
			"@/public/*": ["./public/*"],
//			"@constants/*": ["./src/constants/*"],
//			"@components/*": ["./src/components/*"],
//			"@hooks/*": ["./src/hooks/*"],
//			"@services/*": ["./src/services/*"],
//			"@store/*": ["./src/store/*"],
//			"@styles/*": ["./src/styles/*"],
//			"@typing/*": ["./src/types/*"],
//			"@utils/*": ["./src/utils/*"]
		}
	},
	"exclude": ["**/.*/", "/src/components/ui/**/*"],
	"include": ["./src/**/**/*"]
}
